spring:
  data:
    mongodb:
      uri: ${MONGODB_URI}
  # ADD: Mail configuration for production
  mail:
    host: ${MAIL_HOST:smtp.gmail.com}
    port: ${MAIL_PORT:587}
    username: ${MAIL_USERNAME}
    password: ${MAIL_PASSWORD}
    properties:
      mail:
        smtp:
          auth: true
          starttls:
          enable: true

# Cloudinary - Environment Variables for Prod
cloudinary:
  cloud-name: ${CLOUDINARY_CLOUD_NAME}
  api-key: ${CLOUDINARY_API_KEY}
  api-secret: ${CLOUDINARY_API_SECRET}

logging:
  level:
    com.navigant: INFO
    org.springframework: WARN

app:
  env: production
  cors:
    allowed-origins: https://www.navigant.in,https://admin.navigant.in
  # JWT - Env Vars for Prod
  jwt:
    secret: ${JWT_SECRET}
    expiration: ${JWT_EXPIRATION:86400000}
  # ADD: Notification emails for production
  notifications:
    leads-email: ${LEADS_NOTIFICATION_EMAIL}
    hr-email: ${HR_NOTIFICATION_EMAIL}

# Actuator security (lock down in prod)
management:
  endpoints:
    web:
      exposure:
        include: health,info
  endpoint:
    health:
      show-details: when_authorized